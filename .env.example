# Amazon Product Advertising API Configuration
# Get these from: https://affiliate-program.amazon.com/help/node/topic/GP38PJ6EUR6PFBEC

# Amazon API Credentials
AMAZON_ACCESS_KEY=your_amazon_access_key_here
AMAZON_SECRET_KEY=your_amazon_secret_key_here

# Amazon Associate Tags (Affiliate IDs) by Region
AMAZON_ASSOCIATE_TAG_US=pcbuilder-20
AMAZON_ASSOCIATE_TAG_CA=pcbuilder-20
AMAZON_ASSOCIATE_TAG_UK=pcbuilder-21
AMAZON_ASSOCIATE_TAG_DE=pcbuilder-21
AMAZON_ASSOCIATE_TAG_AU=pcbuilder-20

# Rate Limiting Configuration
AMAZON_REQUEST_DELAY=300
AMAZON_MAX_REQUESTS_PER_MINUTE=10

# Optional: Enable real Amazon API vs simulation
ENABLE_REAL_AMAZON_API=false